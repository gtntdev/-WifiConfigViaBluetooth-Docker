------------------hint for reading outher procceses stdout(#1)-not wokring----------------
strace -e trace=write -s1000 -fp 141 2>&1 \
| grep --line-buffered -o '".\+[^"]"' \
| grep --line-buffered -o '[^"]\+[^"]' \
| while read -r line; do
  printf "%b" $line;
done
